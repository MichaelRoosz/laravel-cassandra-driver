{
    "name": "mroosz/laravel-cassandra-driver",
    "type": "library",
    "description": "Cassandra based query builder for laravel.",
    "license": "MIT",
    "homepage": "https://github.com/MichaelRoosz/laravel-cassandra-driver",
    "keywords": [
        "cassandra",
        "nosql",
        "laravel",
        "database",
        "query builder",
        "cql"
    ],
    "authors": [
        {
            "name": "Michael Roosz",
            "email": "michael.roosz@web.de"
        },
        {
            "name": "Torecan Celik",
            "email": "torecancelik@gmail.com"
        },
        {
            "name": "Sijoy Jos",
            "email": "sijoy@cubettech.com"
        },
        {
            "name": "Renny M Roy",
            "email": "renny.roy@cubettech.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "LaravelCassandraDriver\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelCassandraDriver\\Test\\": "test/",
            "Cassandra\\": "../lp-php-cassandra/src/"
        }
    },
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "laravel/framework": "^11",
        "mroosz/php-cassandra": "^0.9.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75.0",
        "phpstan/phpstan": "^2.1.17",
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.0",
        "mockery/mockery": "^1.6"
    },
    "scripts": {
        "lint": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer check",
        "lint-fix": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=1G",
        "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit $@",
        "test:unit": "vendor/bin/phpunit --testsuite unit",
        "test:integration:up": "docker compose up -d",
        "test:integration:init": "bash .docker/wait-for-cassandra.sh",
        "test:integration:run": "DB_CONNECTION=cassandra DB_HOST=127.0.0.1 DB_PORT=9042 vendor/bin/phpunit --testsuite integration",
        "test:integration:down": "docker compose down -v",
        "test:integration": "docker compose up -d && bash .docker/wait-for-cassandra.sh && DB_CONNECTION=cassandra DB_HOST=127.0.0.1 DB_PORT=9042 vendor/bin/phpunit --testsuite integration && docker compose down -v"
    },

    "extra": {
        "laravel": {
            "providers": [
                "LaravelCassandraDriver\\CassandraServiceProvider"
            ]
        }
    }
}
